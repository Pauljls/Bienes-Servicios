@model List<BienesYServicios.Models.Requerimiento>


<div class="row" style="background-color: #003399; height: auto;">
    <!-- Sidebar -->
    <div class="col-md-3 col-lg-2 sidebar">
        <div class="p-3 text-center">
            <img src="~/images/Logo.png" alt="Logo" class="img-fluid mb-3">
            <button class="btn btn-success w-100 mb-3" data-bs-toggle="modal" data-bs-target="#crearRequerimiento">
                + Crear Requerimiento
            </button>
        </div>
        <nav class="list-group-flush">
            <a href="#" class="menu-item list-group-item">Requerimientos</a>
            <a href="#" class="menu-item list-group-item">Tipos de Requerimiento</a>
            <a href="@Url.Action("Oficinas","Home")" class="menu-item list-group-item">Oficinas</a>
            <a href="#" class="menu-item list-group-item">Notificaciones</a>
        </nav>
    </div>

    <!-- Main Content -->
    <main class="col-md-9 col-lg-10">
        <div class="header d-flex justify-content-between align-items-center">
            <h4>Requerimientos</h4>
            <span>Bienvenido(a), @ViewBag.nombre @ViewBag.apellido</span>
        </div>

        <!-- Tabla de Requerimientos -->
        @if (Model.Any())
        {
            <div class="p-4 align-self-center">
                <div class="table-container">
                    <table class="table table-bordered table-striped table-hover">
                        <thead class="table-dark">
                            <tr>
                                <th>ID</th>
                                <th>Nombre del Requerimiento</th>
                                <th>Tipo</th>
                                <th>Fecha de Creación</th>
                                <th>Creado Por</th>
                                <th>Estado</th>
                                <th>Acción</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var req in Model)
                            {
                                <tr>
                                    <td>@req.Id</td>
                                    <td>@req.Nombre</td>
                                    <td>@req.SubCategoriaRequerimiento.Nombre</td>
                                    <td>@req.HistorialRequerimientos.FirstOrDefault().FechaModificacion</td>
                                    <td>@req.HistorialRequerimientos.LastOrDefault().IdUsuarioNavigation.Nombre</td>
                                    <td>@req.HistorialRequerimientos.FirstOrDefault().IdEstadoNavigation.Nombre</td>
                                    <td>
                                        <button class="btn btn-view" data-bs-toggle="modal" data-bs-target="#verRequerimiento">
                                            Ver
                                        </button>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>

                <!-- Paginación -->
                <nav aria-label="Page navigation example" class="mt-3">
                    <ul class="pagination justify-content-end">
                        <li class="page-item"><a class="page-link" href="#">1</a></li>
                        <li class="page-item"><a class="page-link" href="#">2</a></li>
                        <li class="page-item"><a class="page-link" href="#">3</a></li>
                        <li class="page-item"><a class="page-link" href="#">4</a></li>
                        <li class="page-item"><a class="page-link" href="#">5</a></li>
                        <li class="page-item"><a class="page-link" href="#">Siguiente</a></li>
                    </ul>
                </nav>
            </div>
        }
        else
        {
            <div class="p-4 align-self-center">
                <div class="alert alert-warning">No se encontró información</div>
            </div>
        }
    </main>
</div>
<!-- Script para filtrar subcategorías -->
<script>
    $(document).ready(function () {
        const categoriaSelect = $("#categoria");
        const subcategoriaSelect = $("#subcategoria");

        const subcategorias = subcategoriaSelect.find('option').clone();

        categoriaSelect.change(function () {
            const categoriaId = $(this).val();
            subcategoriaSelect.empty();
            subcategoriaSelect.append('<option value="">-- Seleccione una subcategoría --</option>');

            if (categoriaId) {
                subcategorias.each(function () {
                    if ($(this).data('categoria-id') == categoriaId) {
                        subcategoriaSelect.append($(this).clone());
                    }
                });
            }
        });
    });
</script>
