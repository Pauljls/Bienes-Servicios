@model List<BienesYServicios.Models.Oficina>

<div class="row">
    <!-- Sidebar -->
    <nav class="col-md-3 col-lg-2 d-md-block sidebar bg-dark text-white">
        <div class="text-center py-4">
            <img src="~/images/Logo.png" alt="Logo" class="img-fluid mb-3">
            <button class="btn btn-success w-100 mb-3" data-bs-toggle="modal" data-bs-target="#RequerimientoModal">+ Crear Requerimiento</button>
        </div>
        <ul class="nav flex-column">
            <li class="nav-item"><a href="@Url.Action("AdminPanel","Dashboard")" class="nav-link text-white">📌 Requerimientos</a></li>
            <li class="nav-item"><a href="@Url.Action("ControlCategoria","TipoRequerimiento")" class="nav-link text-white">📂 Tipos de Requerimiento</a></li>
            <li class="nav-item"><a href="@Url.Action("ControlOficinas","Oficina")" class="nav-link text-white">🏢 Oficinas</a></li>
            <li class="nav-item"><a href="#" class="nav-link text-white">🔔 Notificaciones</a></li>
        </ul>
    </nav>

    <!-- Main Content -->
    <main class="col-md-9 col-lg-10 px-4">
        <!-- Header -->
        <div class="header mb-4">
            <div class="d-flex justify-content-between align-items-center">
                <h4 class="mb-0">Oficinas</h4>
                <div class="user-info">
                    Bienvenido(a), Administrador, @ViewBag.nombre @ViewBag.apellidos
                </div>
            </div>
        </div>

        <!-- Content -->
        <div class="content-wrapper">
            @if (Model != null && Model.Any())
            {
                <div class="table-container">
                    <table class="table table-bordered table-hover">
                        <thead class="table-dark">
                            <tr>
                                <th scope="col">ID</th>
                                <th scope="col">Nombre</th>
                                <th scope="col">Participantes</th>
                                <th scope="col">Acción</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var oficina in Model)
                            {
                                <tr>
                                    <td>@oficina.Id</td>
                                    <td>@oficina.Nombre</td>
                                    <td>@oficina.Usuarios.Count</td>
                                    <td>
                                        <a href="@Url.Action("DetalleOficina", "Oficina", new { id = oficina.Id })"
                                           class="btn btn-view">
                                            Ver
                                        </a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>

                <!-- Pagination -->
                @if (ViewBag.TotalPages > 1)
                {
                    <nav aria-label="Navegación de páginas" class="mt-4">
                        <ul class="pagination justify-content-end">
                            @for (int i = 1; i <= ViewBag.TotalPages; i++)
                            {
                                <li class="page-item @(i == ViewBag.CurrentPage ? "active" : "")">
                                    <a class="page-link" href="@Url.Action("ControlOficinas", "Oficina", new { page = i })">
                                        @i
                                    </a>
                                </li>
                            }
                            @if (ViewBag.CurrentPage < ViewBag.TotalPages)
                            {
                                <li class="page-item">
                                    <a class="page-link" href="@Url.Action("ControlOficinas", "Oficina", new { page = ViewBag.CurrentPage + 1 })">
                                        Siguiente
                                    </a>
                                </li>
                            }
                        </ul>
                    </nav>
                }
            }
            else
            {
                <div class="alert alert-warning" role="alert">
                    No hay oficinas registradas actualmente
                </div>
            }
        </div>
    </main>
</div>

<style>


    html, body {
        height: 100%;
        margin: 0;
        padding: 0;
    }

    .container-fluid {
        min-height: 100vh;
        display: flex;
        flex-direction: column;
    }

    .sidebar {
        min-height: 100vh;
        padding: 20px;
    }

    .nav-link {
        font-size: 1rem;
        padding: 10px;
        display: block;
    }

</style>