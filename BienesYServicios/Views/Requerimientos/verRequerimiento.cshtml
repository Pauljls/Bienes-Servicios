    <!-- Contenido de la Vista -->
    <div class="container-fluid mt-4">
        <div class="card shadow-lg p-4">
            <h3 class="mb-4 text-center text-primary">📋 Detalles del Requerimiento</h3>

            <!-- Información General -->
            <div class="row text-center mb-3 fw-bold">
                <div class="col">NOMBRE DEL REQUERIMIENTO</div>
                <div class="col">TIPO</div>
                <div class="col">DESCRIPCION</div>
                <div class="col">FECHA DE CREACIÓN</div>
            </div>
            <div class="row text-center border-top pt-2">
                <div class="col">@Model?.Nombre</div>
                <div class="col">@Model?.SubCategoriaRequerimiento?.Nombre</div>
                <div class="col">@Model?.Descripcion</div>
                <div class="col">@primerHistorial?.FechaModificacion.ToString("dd/MM/yy")</div>
            </div>

            <!-- Creado Por y Estado -->
            <div class="row text-center mt-4 fw-bold">
                <div class="col">CREADO POR</div>
                <div class="col">ESTADO</div>
            </div>
            <div class="row text-center border-top pt-2">
                <div class="col">@Model?.HistorialRequerimientos?.FirstOrDefault()?.IdUsuarioNavigation?.Nombre
                    @Model?.HistorialRequerimientos?.FirstOrDefault()?.IdUsuarioNavigation?.Apellidos</div>
                <div class="col">
                    <span class="badge bg-warning text-dark" id="estadocontainer">@Model?.HistorialRequerimientos?.LastOrDefault()?.IdEstadoNavigation.Nombre</span>
                </div>
            </div>

            <!-- Responsables -->
            @if (Model?.HistorialRequerimientos?.Count > 1)
            {
                <div class="row text-center mt-4">
                    <div class="col-md-6">
                        <div class="card shadow-sm p-3">
                            <strong>🧑‍💼 Responsable</strong><br>
                            <span class="fw-bold">
                                @creador?.Nombre
                                @creador?.Apellidos
                            </span><br>
                            @creador?.Oficina?.Nombre
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="card shadow-sm p-3">
                            <strong>🧑‍💼 Responsable</strong><br>
                            <span class="fw-bold">
                                @ultimoEditor?.Nombre
                                @ultimoEditor?.Apellidos
                            </span><br>
                            @ultimoEditor?.Oficina?.Nombre
                            
                        </div>
                    </div>
                </div>

                <!-- Botones de Oficinas -->
                <div class="d-flex justify-content-center mt-4">
                    <button class="btn btn-outline-primary me-3 shadow-sm">🏢 Oficina 1</button>
                    <button class="btn btn-outline-primary shadow-sm">🏢 Oficina 2</button>
                </div>

            }
            else
            {
                <div class="row text-center mt-4 d-flex justify-content-center ">
                    <div class="col-md-6">
                        <div class="card shadow-sm p-3">
                            <strong>🧑‍💼 Responsable</strong><br>
                            <span class="fw-bold">
                                @creador?.Nombre
                                @creador?.Apellidos
                            </span><br>
                            @if (creador?.Oficina is null)
                            {
                                <p>NO HAY OFICINA</p>
                            }
                            @creador?.Oficina?.Nombre
                        </div>
                    </div>
                </div>

                <!-- Botones de Oficinas -->
                <div class="d-flex justify-content-center mt-4">
                    <button class="btn btn-outline-primary me-3 shadow-sm">🏢 Oficina 1
                        
                    </button>
                    
                </div>
            }


            <div class="container mt-5">
                <div class="row">
                    <!-- Estado del Trámite -->
                    <div class="col-md-6">
                        <div class="card shadow-lg p-4">
                            <h4 class="text-center fw-bold">Editar Estado</h4>
                            <p class="text-center text-muted">Presione cualquier botón para editar el estado</p>
                            <form id="formHistorial" class="text-center">
                                <input type="hidden" name="IdRequerimiento" value="@Model?.Id" />

                                <div class="d-flex justify-content-center gap-3 mt-3">
                                    <button type="button" id="Tramitado" class="btn btn-success shadow-sm px-4 py-2"
                                            data-bs-toggle="modal" data-bs-target="#exampleModal">
                                        ✅ Tramitado
                                    </button>
                                    <button id="Denegado" type="button" class="btn btn-danger shadow-sm px-4 py-2"
                                            data-bs-toggle="modal" data-bs-target="#exampleModal">
                                        ❌ Denegado
                                    </button>
                                    <button type="button" id="Observado" class="btn btn-primary shadow-sm px-4 py-2"
                                            data-bs-toggle="modal" data-bs-target="#exampleModal">
                                        📩 Observado
                                    </button>
                                </div>
                            </form>

                            <!-- Presupuesto -->
                            <div class="text-center mt-4">
                                <h5 class="fw-bold text-success">💰 Presupuesto</h5>
                                <div class="card shadow-sm p-3">
                                    <p class="mb-1">Valor Referencial: <strong class="text-primary">$</strong></p>
                                    <p class="mb-0">Divisa: <strong class="text-success"></strong></p>
                                </div>
                                <button type="button" class="btn btn-outline-success mt-3">Agregar Presupuesto</button>
                            </div>
                        </div>
                    </div>

                    <!-- Historial de cambios -->
                    <div class="col-md-6">
                        <div class="card shadow-lg p-4">
                            <h5 class="fw-bold text-success text-center">
                                📜 Historial de Cambios
                            </h5>
                            <div class="table-responsive mt-3">
                                @if (Model?.HistorialRequerimientos is not null)
                                {
                                    <table class="table table-bordered table-striped shadow-sm">
                                        <thead class="table-dark text-center">
                                            <tr>
                                                <th>Fecha</th>
                                                <th>Usuario</th>
                                                <th>Oficina</th>
                                                <th>Estado</th>
                                                
                                            </tr>
                                        </thead>
                                        <tbody class="text-center">
                                            @foreach (var modificacion in Model.HistorialRequerimientos)
                                            {
                                                <tr>
                                                    <td>@modificacion.FechaModificacion.ToString("dd/MM/yy")</td>
                                                    <td>@modificacion.IdUsuarioNavigation.Nombre, @modificacion.IdUsuarioNavigation.Apellidos</td>
                                                    <td>@modificacion.IdUsuarioNavigation.Oficina.Nombre</td>
                                                    <td>@modificacion.IdEstadoNavigation.Nombre</td>
                                                </tr>
                                            }
                                        </tbody>
                                    </table>
                                }else{
                                    <div class="alert alert-warning" role="alert">
                                       No existen cambios actualmente
                                    </div>
                                }
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

