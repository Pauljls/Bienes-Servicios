    html, body {
        height: 100%;
        margin: 0;
        padding: 0;
    }

    .sidebar {
        min-height: 100vh;
        padding: 20px;
    }

    .nav-link {
        font-size: 1rem;
        padding: 10px;
        display: block;
    }
