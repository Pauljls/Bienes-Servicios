@model List<BienesYServicios.Models.Requerimiento>;

<div class="row" style="background-color: #003399; height: auto;">
    <!-- Sidebar -->
    <div class="col-md-3 col-lg-2 sidebar">
        <div class="p-3 text-center">
            <img src="~/images/Logo.png" alt="Logo" class="img-fluid mb-3">
            <button class="btn btn-success w-100 mb-3" data-bs-toggle="modal" data-bs-target="#RequerimientoModal">+ Crear Requerimiento</button>
        </div>
        <nav class="list-group-flush">
            <a href="@Url.Action("AdminPanel","Dashboard")" class="menu-item list-group-item">Requerimientos</a>
            <a href="@Url.Action("ControlCategoria","TipoRequerimiento")" class="menu-item list-group-item">Tipos de Requerimiento</a>
            <a href="@Url.Action("ControlOficinas","Oficina")" class="menu-item list-group-item">Oficinas</a>
            <a href="#" class="menu-item list-group-item">Notificaciones</a>
        </nav>
    </div>

    <!-- Main Content -->
    <main class="col-md-9 col-lg-10" >
        <!-- Header -->
        <div class="header">
            <div class="d-flex justify-content-between align-items-center">
                <h4>Requerimientos</h4>
                <span>Bienvenido(a), Administrador, @ViewBag.nombre @ViewBag.apellidos</span>
            </div>
        </div>

        <!-- Table -->
        <div class="p-4 align-self-center">
            @if (Model.Any())
            {
                <div class="table-container">
                    <table class="table table-bordered table-striped table-hover">
                        <thead class="table-dark">
                            <tr>
                                <th>ID</th>
                                <th>Nombre del Requerimiento</th>
                                <th>Tipo</th>
                                <th>Fecha de Creación</th>
                                <th>Creado Por</th>
                                <th>Estado</th>
                                <th>Acción</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var requerimiento in Model)
                            {
                                <tr>
                                    <td>@requerimiento.Id</td>
                                    <td>@requerimiento?.SubCategoriaRequerimiento?.Nombre</td>
                                    <td>@requerimiento?.SubCategoriaRequerimiento?.Categoria?.Nombre</td>
                                    <td>@requerimiento?.HistorialRequerimientos?.LastOrDefault()?.FechaModificacion</td>
                                    <td>@requerimiento?.HistorialRequerimientos?.LastOrDefault()?.IdUsuarioNavigation.Nombre</td>
                                    <td>En Espera</td>
                                    <td><button class="btn btn-view" data-bs-toggle="modal" data-bs-target="#requerimientoModal" id="@requerimiento?.Id" onclick="verRequerimiento(this.id)" >Ver</button></td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>

                <!-- Pagination -->
                <nav aria-label="Page navigation example" class="mt-3">
                    <ul class="pagination justify-content-end">
                        <li class="page-item"><a class="page-link" href="#">1</a></li>
                        <li class="page-item"><a class="page-link" href="#">2</a></li>
                        <li class="page-item"><a class="page-link" href="#">3</a></li>
                        <li class="page-item"><a class="page-link" href="#">4</a></li>
                        <li class="page-item"><a class="page-link" href="#">5</a></li>
                        <li class="page-item"><a class="page-link" href="#">Siguiente</a></li>
                    </ul>
                </nav>
            }


        </div>
    </main>
</div>

<!-- Modal -->

<div class="modal fade" id="RequerimientoModal" tabindex="-1" aria-labelledby="RequeriemintoModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h1 class="modal-title fs-5" id="exampleModalLabel">Crear Requerimiento</h1>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <form class="col" asp-action="CreateRequerimiento" method="post" id="requerimientoForm">
                    @Html.AntiForgeryToken()
                    <div class="row py-3">
                        <label>Escoja una categoría</label>
                        <div class="col">
                            <select id="categoriaSelect" class="form-select" asp-items="ViewBag.categorias" required>
                                <option >Seleccione una opción</option>
                            </select>
                        </div>
                        <div class="col">
                            <select id="subcategoriaSelect" class="form-select" name="SubCategoriaRequerimientoId" required>
                                <option value="">Seleccione una opción</option>
                            </select>
                        </div>
                    </div>
                    <div class=" py-3">
                        <label class="text-break"> 
                            Nombre 
                            del
                            Requerimiento
                        </label>
                        <input type="text" class="form-control" name="Nombre" required/>
                    </div>
                    <div class=" py-3">
                        <label class="form-label">
                            Descripcion del 
                            Requerimiento
                        </label>
                        <textarea class="form-control" name="Descripcion" required>

                        </textarea>
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-danger" data-bs-dismiss="modal">Cerrar</button>
                <button type="submit" class="btn btn-success" form="requerimientoForm">Crear</button>
            </div>
        </div>
    </div>
</div>


<!-- VER REQUERIMIENTO-->

<div class="modal fade" id="requerimientoModal" tabindex="-1" aria-labelledby="modalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="modalLabel">Detalles del Requerimiento</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <div class="container">
                    <!-- Información Principal -->
                    <div class="row mb-3">
                        <div class="col-md-4">
                            <strong>NOMBRE DEL REQUERIMIENTO</strong>
                            <p id="nombreRequerimiento">-</p>
                        </div>
                        <div class="col-md-4">
                            <strong>TIPO</strong>
                            <p id="tipo">-</p>
                        </div>
                        <div class="col-md-4">
                            <strong>FECHA DE CREACIÓN</strong>
                            <p id="fechaCreacion">-</p>
                        </div>
                    </div>

                    <div class="row mb-3">
                        <div class="col-md-6">
                            <strong>CREADO POR</strong>
                            <p id="creadoPor">-</p>
                        </div>
                        <div class="col-md-6">
                            <strong>ESTADO</strong>
                            <p id="estado">-</p>
                        </div>
                    </div>

                    <!-- Responsables -->
                    <div class="row mb-4">
                        <div class="col-md-6">
                            <strong>REPONSABLE</strong>
                            <p>Paul Lazaro<br>Oficina 1</p>
                        </div>
                        <div class="col-md-6">
                            <p>Diablito<br>Oficina 1</p>
                        </div>
                    </div>

                    <!-- Workflow -->
                    <div class="workflow-container">
                        <div class="oficina-box">OFICINA 1</div>
                        <span>──────</span>
                        <div class="oficina-box">OFICINA 2</div>
                    </div>

                    <!-- Leyenda -->
                    <div class="text-center mb-4">
                        <div class="legend-item estado-tramitado">Tramitado</div>
                        <div class="legend-item estado-pendiente">Pendiente</div>
                        <div class="legend-item estado-observado">Observado</div>
                    </div>

                    <!-- Niveles -->
                    <div class="text-center">
                        <div class="nivel nivel-dga">DGA</div>
                        <div class="nivel nivel-abastecimiento">Abastecimiento</div>
                        <div class="nivel nivel-especialista">Especialista</div>
                        <div class="nivel nivel-cotizaciones">Cotizaciones</div>
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cerrar</button>
            </div>
        </div>
    </div>
</div>

