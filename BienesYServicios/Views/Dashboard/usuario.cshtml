@{
}
<div class="row" style="background-color: #003399; height: auto;">
    <!-- Sidebar -->
    <div class="col-md-3 col-lg-2 sidebar">
        <div class="p-3 text-center">
            <img src="~/images/Logo.png" alt="Logo" class="img-fluid mb-3">
            <button class="btn btn-success w-100 mb-3">+ Crear Requerimiento</button>
        </div>
        <nav class="list-group-flush">
            <a href="#" class="menu-item  list-group-item">Requerimientos</a>
            <a href="#" class="menu-item list-group-item">Tipos de Requerimiento</a>
            <a href="#" class="menu-item list-group-item">Oficinas</a>
            <a href="#" class="menu-item list-group-item">Notificaciones</a>
        </nav>
    </div>

    <!-- Main Content -->
    <main class="col-md-9 col-lg-10" >
        <!-- Header -->
        <div class="header">
            <div class="d-flex justify-content-between align-items-center">
                <h4>Requerimientos</h4>
                <span>Bienvenido(a), Usuario, @ViewBag.apellido</span>
            </div>
        </div>

        <!-- Table -->
        <div class="p-4 align-self-center">
            <div class="table-container">
                <table class="table table-bordered table-striped table-hover">
                    <thead class="table-dark">
                        <tr>
                            <th>ID</th>
                            <th>Nombre del Requerimiento</th>
                            <th>Tipo</th>
                            <th>Fecha de Creación</th>
                            <th>Creado Por</th>
                            <th>Estado</th>
                            <th>Acción</th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr>
                            <td>1</td>
                            <td>Muebles</td>
                            <td>Bienes</td>
                            <td>06/01/2025</td>
                            <td>Paul Sanchez</td>
                            <td>En Espera</td>
                            <td><button class="btn btn-view">Ver</button></td>
                        </tr>
                    </tbody>
                </table>
            </div>

            <!-- Pagination -->
            <nav aria-label="Page navigation example" class="mt-3">
                <ul class="pagination justify-content-end">
                    <li class="page-item"><a class="page-link" href="#">1</a></li>
                    <li class="page-item"><a class="page-link" href="#">2</a></li>
                    <li class="page-item"><a class="page-link" href="#">3</a></li>
                    <li class="page-item"><a class="page-link" href="#">4</a></li>
                    <li class="page-item"><a class="page-link" href="#">5</a></li>
                    <li class="page-item"><a class="page-link" href="#">Siguiente</a></li>
                </ul>
            </nav>
        </div>
    </main>
</div>

<style>

    .sidebar {
        height: 100vh;
        background-color: #ffffff;
        border-right: 2px solid #e0e0e0;
    }

    .menu-item {
        color: #333;
        font-weight: bold;
        padding: 10px 15px;
    }

        .menu-item.active {
            background-color: #0d6efd;
            color: white;
        }

        .menu-item:hover {
            background-color: #e0e0e0;
        }

    .header {
        background-color: #003399;
        color: white;
        padding: 10px 20px;
    }

    .table-container {
        background-color: #e0e0e0;
        border-radius: 5px;
        padding: 15px;
    }

    .btn-view {
        background-color: green;
        color: white;
        font-weight: bold;
    }

        .btn-view:hover {
            background-color: darkgreen;
            color:#ffffff
        }

    .pagination .page-link {
        color: #0d6efd;
    }

        .pagination .page-link:hover {
            background-color: #0d6efd;
            color: white;
        }
</style>
