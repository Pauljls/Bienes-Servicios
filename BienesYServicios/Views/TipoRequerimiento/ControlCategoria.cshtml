@{
}
@model List<SubcategoriaRequerimiento>

<div class="row" >
    <!-- Sidebar -->
    <nav class="col-md-3 col-lg-2 d-md-block sidebar bg-dark text-white">
        <div class="text-center py-4">
            <img src="~/images/Logo.png" alt="Logo" class="img-fluid mb-3">
            <button class="btn btn-success w-100 mb-3" data-bs-toggle="modal" data-bs-target="#RequerimientoModal">+ Crear Requerimiento</button>
        </div>
        <ul class="nav flex-column">
            <li class="nav-item"><a href="@Url.Action("AdminPanel","Dashboard")" class="nav-link text-white">📌 Requerimientos</a></li>
            <li class="nav-item"><a href="@Url.Action("ControlCategoria","TipoRequerimiento")" class="nav-link text-white">📂 Tipos de Requerimiento</a></li>
            <li class="nav-item"><a href="@Url.Action("ControlOficinas","Oficina")" class="nav-link text-white">🏢 Oficinas</a></li>
            <li class="nav-item"><a href="#" class="nav-link text-white">🔔 Notificaciones</a></li>
        </ul>
    </nav>
    <!-- Main Content -->
    <main class="col-md-9 col-lg-10">
        <!-- Header -->
        <div class="header">
            <div class="d-flex justify-content-between align-items-center">
                <h4>Categorias</h4>
                <span>Bienvenido(a), Administrador, @ViewBag.nombre @ViewBag.apellidos</span>
            </div>
        </div>

        <!-- Table -->
        <div class="p-4 align-self-center">
            <div class="table-container">
                <div class="py-4">
                    <select id="categoriaSelect"
                            class="form-select"
                            asp-items="ViewBag.categorias"
                            style="width: 25vw"
                            onchange="filtrarTabla()">
                        <option value="">Escoja una categoria</option>
                    </select>
                </div>
                <table id="subcategoriasTable" class="table table-bordered table-striped table-hover">
                    <thead class="table-dark">
                        <tr>
                            <th>ID</th>
                            <th>Nombre</th>
                            <th>Tipo</th>
                            <th>Acción</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var subcat in Model)
                        {
                            <tr data-categoria-id="@subcat?.Categoria?.Id">
                                <td>@subcat.Id</td>
                                <td>@subcat?.Nombre</td>
                                <td>@subcat?.Categoria?.Nombre</td>
                                <td>
                                    <button class="btn btn-view">Ver</button>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>

            <!-- Pagination -->
            <nav aria-label="Page navigation example" class="mt-3">
                <ul class="pagination justify-content-end">
                    <li class="page-item"><a class="page-link" href="#">1</a></li>
                    <li class="page-item"><a class="page-link" href="#">2</a></li>
                    <li class="page-item"><a class="page-link" href="#">3</a></li>
                    <li class="page-item"><a class="page-link" href="#">4</a></li>
                    <li class="page-item"><a class="page-link" href="#">5</a></li>
                    <li class="page-item"><a class="page-link" href="#">Siguiente</a></li>
                </ul>
            </nav>
        </div>
    </main>
</div>

<style>

    html, body {
        height: 100%;
        margin: 0;
        padding: 0;
    }

    .container-fluid {
        min-height: 100vh;
        display: flex;
        flex-direction: column;
    }

    .sidebar {
        min-height: 100vh;
        padding: 20px;
    }

    .nav-link {
        font-size: 1rem;
        padding: 10px;
        display: block;
    }
</style>

<script>
    // Función para filtrar la tabla según la categoría seleccionada
    function filtrarTabla() {
        // Obtener el valor de la categoría seleccionada
        const categoriaSeleccionada = document.getElementById('categoriaSelect').value;
        // Obtener todas las filas de la tabla
        const filas = document.querySelectorAll('#subcategoriasTable tbody tr');

        // Recorrer cada fila y mostrar/ocultar según el filtro
        filas.forEach(function (fila) {
            const mostrarFila = !categoriaSeleccionada ||
                fila.getAttribute('data-categoria-id') === categoriaSeleccionada;
            fila.style.display = mostrarFila ? '' : 'none';
        });
    }

    // Ejecutar el filtro cuando la página termina de cargar
    document.addEventListener('DOMContentLoaded', function () {
        filtrarTabla();
    });
</script>