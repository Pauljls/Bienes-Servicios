@{
}
@model List<SubcategoriaRequerimiento>

<div class="row" style="background-color: #003399; height: auto;">
    <!-- Sidebar -->
    <div class="col-md-3 col-lg-2 sidebar">
        <div class="p-3 text-center">
            <img src="~/images/Logo.png" alt="Logo" class="img-fluid mb-3">
            <button class="btn btn-success w-100 mb-3">+ Crear Requerimiento</button>
        </div>
        <nav class="list-group-flush">
            <a href="@Url.Action("AdminPanel","Dashboard")" class="menu-item list-group-item">Requerimientos</a>
            <a href="@Url.Action("ControlCategoria","TipoRequerimiento")" class="menu-item list-group-item">Tipos de Requerimiento</a>
            <a href="@Url.Action("ControlOficinas","Oficina")" class="menu-item list-group-item">Oficinas</a>
            <a href="#" class="menu-item list-group-item">Notificaciones</a>
        </nav>
    </div>

    <!-- Main Content -->
    <main class="col-md-9 col-lg-10">
        <!-- Header -->
        <div class="header">
            <div class="d-flex justify-content-between align-items-center">
                <h4>Categorias</h4>
                <span>Bienvenido(a), Administrador, @ViewBag.nombre @ViewBag.apellidos</span>
            </div>
        </div>

        <!-- Table -->
        <div class="p-4 align-self-center">
            <div class="table-container">
                <div class="py-4">
                    <select id="categoriaSelect"
                            class="form-select"
                            asp-items="ViewBag.categorias"
                            style="width: 25vw"
                            onchange="filtrarTabla()">
                        <option value="">Escoja una categoria</option>
                    </select>
                </div>
                <table id="subcategoriasTable" class="table table-bordered table-striped table-hover">
                    <thead class="table-dark">
                        <tr>
                            <th>ID</th>
                            <th>Nombre</th>
                            <th>Tipo</th>
                            <th>Acción</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var subcat in Model)
                        {
                            <tr data-categoria-id="@subcat.Categoria.Id">
                                <td>@subcat.Id</td>
                                <td>@subcat.Nombre</td>
                                <td>@subcat.Categoria.Nombre</td>
                                <td>
                                    <button class="btn btn-view">Ver</button>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>

            <!-- Pagination -->
            <nav aria-label="Page navigation example" class="mt-3">
                <ul class="pagination justify-content-end">
                    <li class="page-item"><a class="page-link" href="#">1</a></li>
                    <li class="page-item"><a class="page-link" href="#">2</a></li>
                    <li class="page-item"><a class="page-link" href="#">3</a></li>
                    <li class="page-item"><a class="page-link" href="#">4</a></li>
                    <li class="page-item"><a class="page-link" href="#">5</a></li>
                    <li class="page-item"><a class="page-link" href="#">Siguiente</a></li>
                </ul>
            </nav>
        </div>
    </main>
</div>

<style>

    .sidebar {
        height: 100vh;
        background-color: #ffffff;
        border-right: 2px solid #e0e0e0;
    }

    .menu-item {
        color: #333;
        font-weight: bold;
        padding: 10px 15px;
    }

        .menu-item.active {
            background-color: #0d6efd;
            color: white;
        }

        .menu-item:hover {
            background-color: #e0e0e0;
        }

    .header {
        background-color: #003399;
        color: white;
        padding: 10px 20px;
    }

    .table-container {
        background-color: #e0e0e0;
        border-radius: 5px;
        padding: 15px;
    }

    .btn-view {
        background-color: green;
        color: white;
        font-weight: bold;
    }

        .btn-view:hover {
            background-color: darkgreen;
            color:#ffffff
        }

    .pagination .page-link {
        color: #0d6efd;
    }

        .pagination .page-link:hover {
            background-color: #0d6efd;
            color: white;
        }
</style>

<script>
    // Función para filtrar la tabla según la categoría seleccionada
    function filtrarTabla() {
        // Obtener el valor de la categoría seleccionada
        const categoriaSeleccionada = document.getElementById('categoriaSelect').value;
        // Obtener todas las filas de la tabla
        const filas = document.querySelectorAll('#subcategoriasTable tbody tr');

        // Recorrer cada fila y mostrar/ocultar según el filtro
        filas.forEach(function (fila) {
            const mostrarFila = !categoriaSeleccionada ||
                fila.getAttribute('data-categoria-id') === categoriaSeleccionada;
            fila.style.display = mostrarFila ? '' : 'none';
        });
    }

    // Ejecutar el filtro cuando la página termina de cargar
    document.addEventListener('DOMContentLoaded', function () {
        filtrarTabla();
    });
</script>